<!-- Wrapper -->
        <div class="login-wrapper columns is-gapless">

            <!-- Form section -->
            <div class="column is-7">
                <div class="hero is-fullheight">
                    <div class="hero-heading">
                        <!-- Logo -->
                        <div class="section has-text-centered">
                            <a href="landing-v3.html"><img class="top-logo" src="https://strictcity.live/jobshare/assets/images/logos/bulkit-logo-lemonade.png" alt="Bulkit logo"></a>
                        </div>
                        
                    </div>
                    <div class="hero-body">
                        <div class="container">
                            <div class="columns">
                                <div class="column"></div>
                                <div class="column is-5">
                                    <!-- Login Form -->
                                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                                    <%= devise_error_messages! %>
                                        <div id="signin-form" class="login-form animated preFadeInLeft fadeInLeft">
                                            <!-- Input -->
                                            <div class="field pb-10">
                                                <div class="control">
                                                  <%= f.email_field :email, autofocus: true, placeholder: "Email", :class => 'input is-large' %>
                                                </div>
                                            </div>
                                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                                            <% end %>
                                            <!-- Input -->
                                            <div class="field pb-10">
                                                <div class="control">
                                                    <% if @minimum_password_length %>
                                                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                                                    <% end %><br />
                                                    <%= f.password_field :password, autocomplete: "off", :class => 'input is-large' %>
                                                </div>
                                            </div>

                                            <div class="field pb-10">
                                                <div class="control">
                                                    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'input is-large' %>
                                                </div>
                                            </div>
                                            <!-- Submit -->
                                            <p class="control login">
                                              <%= f.submit "Update", :class => 'button button-cta primary-btn btn-align-lg btn-outlined is-bold is-fullwidth rounded raised no-lh' %>
                                            </p>
                                        </div>
                                    <% end -%>
                                    
                                    
                                    <div id="recover" class="section forgot-password animated preFadeInLeft fadeInLeft">
                                        <p class="has-text-centered">
                                            <%= link_to "Back", :back %>
                                        </p>
                                    </div>
                                    <!-- /Toggles -->
                                </div>
                                <div class="column"></div>
                            </div>
                        </div>
                    </div>
                </div>  
            </div>
            <!-- /Form section -->
            
            <!-- Image section (hidden on mobile) -->
            <div class="column login-column is-5 is-hidden-mobile hero-banner">
                <div class="hero is-fullheight is-theme-primary is-relative">
                    <div class="columns has-text-centered">
                        <div class="column">
                            <h2 class="title is-2 light-text">
                                Edit Your Profile
                            </h2>
                            <h3 class="subtitle is-5 light-text">
                                Stop struggling with common tasks and focus on the real choke points. Discover a full featured HR management platform.
                            </h3>
                          
                        </div>
                    </div>
                    <img class="login-city" src="https://strictcity.live/jobshare/assets/images/illustrations/drawings/city.svg" alt="">
                </div>  
            </div>
            <!-- /Image section -->
        </div>
        <!-- /Wrapper -->